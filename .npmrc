# NPM configuration to prevent auto-updates
save-exact=true
package-lock=true
prefer-offline=true

# Registry settings
registry=https://registry.npmjs.org/

# Security settings
audit=false
fund=false

# Cache settings
cache=.npm-cache

# Network settings
fetch-timeout=60000
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000 